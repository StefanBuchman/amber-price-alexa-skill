{
  "type": "APL",
  "version": "1.7",
  "description": "",
  "settings": {},
  "theme": "dark",
  "import": [
        {
            "name": "alexa-layouts",
            "version": "1.4.0"
        }
    ],
  "resources": [],
  "styles": {},
  "onMount": [],
  "graphics": {},
  "commands": {},
  "layouts": {},
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "AlexaHeadline",
        "id": "AmberHeadline",
        "primaryText": "${payload.headlineTemplateData.properties.textContent.primaryText.text}",
